{
  "version": 2,
  "builds": [
    {
      "src": "api/*/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/webhook",
      "dest": "/api/webhook/index.js"
    },
    {
      "src": "/api/alerts",
      "dest": "/api/alerts/index.js"
    },
    {
      "src": "/api/test",
      "dest": "/api/test/index.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 
} 